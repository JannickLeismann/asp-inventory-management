@model Item

<h1>Create/Edit an item</h1>

<form method="post" asp-controller="Items" asp-action="CreateEditItem">
    
    <div>
        <input hidden type="number" class="form-control" asp-for="Id" />
    </div>

    <div>
        <label class="form-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div>
        <label class="form-label" asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div>
        <label class="form-label" asp-for="Stock"></label>
        <input type="number" class="form-control" min="0" asp-for="Stock" />
        <span class="text-danger" asp-validation-for="Stock"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}