@model IEnumerable<Order>

<h1>All orders</h1>

<a class="btn btn-primary" asp-controller="Orders" asp-action="CreateEdit">Create Order</a>


<hr />

<table class="table table-striped">

    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Order order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-controller="Orders" asp-action="CreateEdit" asp-route-id="@order.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Orders" asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
